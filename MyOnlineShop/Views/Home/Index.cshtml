@model IEnumerable<MyOnlineShop.Models.Product>

@{
    ViewData["Title"] = "მთავარი გვერდი";
}

<div class="p-5 mb-4 bg-dark text-white rounded-5 shadow-lg position-relative overflow-hidden" style="background: linear-gradient(45deg, #2c3e50, #000000);">
    <div class="container-fluid py-5 position-relative" style="z-index: 2;">
        <h1 class="display-4 fw-bold italic">საუკეთესო ტექნიკა ერთ სივრცეში</h1>
        <p class="col-md-8 fs-5 text-secondary">აღმოაჩინე უახლესი მოდელები საუკეთესო ფასად. მხოლოდ ჩვენთან, მხოლოდ დღეს.</p>
        <button class="btn btn-primary btn-lg px-4 rounded-pill" type="button">დაათვალიერე</button>
    </div>
    <div class="position-absolute bottom-0 end-0 opacity-25 p-4 d-none d-md-block" style="font-size: 150px; transform: rotate(-15deg);">🛒</div>
</div>

<div class="container mt-5">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden product-card" style="transition: 0.3s;">
                    <div class="position-relative">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 250px; object-fit: cover;">
                        <span class="position-absolute top-0 end-0 m-3 badge bg-danger rounded-pill">NEW</span>
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        <p class="card-text text-muted small">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <span class="h4 fw-bold text-primary mb-0">$@item.Price</span>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm rounded-pill px-3">დეტალები</a>
                                <form asp-controller="Cart" asp-action="Add" method="post" class="ms-2">
                                    <input type="hidden" name="productId" value="@item.Id" />
                                    <button type="submit" class="btn btn-success btn-sm rounded-pill px-3">🛒 დამატება</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
    }
</style>